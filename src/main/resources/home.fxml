<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">

    <HBox prefWidth="700" prefHeight="500">

        <!-- User Section -->
        <StackPane fx:id="userPane" prefWidth="350" prefHeight="500" style="-fx-background-color: #ffffff;"
                   onMouseClicked="#goToUser" onMouseEntered="#hoverEffect" onMouseExited="#removeHoverEffect">
            <ImageView fx:id="userIcon" fitWidth="150" fitHeight="150" pickOnBounds="true" preserveRatio="true" />
        </StackPane>

        <!-- Admin Section -->
        <StackPane fx:id="adminPane" prefWidth="350" prefHeight="500" style="-fx-background-color: #ffffff;"
                   onMouseClicked="#goToAdmin" onMouseEntered="#hoverEffect" onMouseExited="#removeHoverEffect">
            <ImageView fx:id="adminIcon" fitWidth="150" fitHeight="150" pickOnBounds="true" preserveRatio="true" />
        </StackPane>
    </HBox>
</AnchorPane>
