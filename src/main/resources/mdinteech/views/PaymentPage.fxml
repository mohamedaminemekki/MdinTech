<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="mdinteech.controllers.PaymentController">
    <top>
        <Label text="Paiement" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 15px;"/>
    </top>
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px;">
            <Label fx:id="paymentDetailsLabel" style="-fx-font-size: 16px;"/>

            <!-- Formulaire de paiement -->
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Numéro de carte :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="cardNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Date d'expiration :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="expirationDateField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Code de sécurité :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="securityCodeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Nom du titulaire :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="cardHolderNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Bouton de confirmation -->
            <Button fx:id="confirmPaymentButton" text="Confirmer le Paiement" onAction="#handleConfirmPayment" style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px; -fx-background-radius: 8px;"/>
        </VBox>
    </center>
</BorderPane>