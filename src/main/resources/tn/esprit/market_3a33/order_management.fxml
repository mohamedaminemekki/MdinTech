<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="20" stylesheets="@order_management.css" fx:controller="tn.esprit.market_3a33.Controllers.OrderManagementController">
    <!-- Title -->
    <Label text="Order Management" styleClass="title-label" />

    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search orders..." styleClass="search-field" HBox.hgrow="ALWAYS" />
        <Region HBox.hgrow="ALWAYS" /> <!-- Spacer -->
        <Button text="Refresh" styleClass="refresh-button" onAction="#handleRefresh" />
    </HBox>

    <!-- Orders List -->
    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox fx:id="ordersContainer" spacing="15" styleClass="orders-container" />
    </ScrollPane>
</VBox>