<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@stock_management.css"
      fx:controller="tn.esprit.market_3a33.Controllers.StockManagementController"
      spacing="20" styleClass="content">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Stock Management" styleClass="section-title" />

    <!-- Table to display low stock products -->
    <TableView fx:id="lowStockTable" styleClass="stock-table">
        <columns>
            <TableColumn text="Product Name" fx:id="productNameColumn" prefWidth="500" />
            <TableColumn text="Current Stock" fx:id="currentStockColumn" prefWidth="250" />
        </columns>
    </TableView>

    <!-- Input fields and buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Add Stock:" styleClass="input-label" />
        <TextField fx:id="stockInput" promptText="Enter quantity" prefWidth="150" styleClass="text-field" />
        <Button text="Add Stock" onAction="#handleAddStock" styleClass="action-button" />
        <Button text="Refresh" onAction="#handleRefresh" styleClass="action-button" />
    </HBox>

    <!-- Invoice Section -->
    <VBox spacing="10" styleClass="invoice-section">
        <Label text="Invoice" styleClass="section-title" />
        <Label fx:id="invoiceLabel" text="Facture: $0.00" styleClass="invoice-total" />
        <Button text="Generate Invoice" onAction="#handleGenerateInvoice" styleClass="action-button" />
    </VBox>
</VBox>