<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AdminBlogController">

    <!-- Left Drawer (identique à la page admin principale) -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Admin Dashboard" />
            <Button mnemonicParsing="false" styleClass="icon-btn">
                <graphic>
                    <SVGPath content="M12 2L2 12h3v8h6v-6h2v6h6v-8h3L12 2z"
                             style="-fx-fill: white;"/>
                </graphic>
                <text>Gestion de Factures</text>
            </Button>
            <Button mnemonicParsing="false" styleClass="icon-btn" onAction="#loadBlogManagement">
                <graphic>
                    <SVGPath content="M4 9h16v2H4zm0 4h10v2H4z"/>
                </graphic>
                <text>Gestion Blog</text>
            </Button>
            <!-- Ajouter d'autres boutons si nécessaire -->
        </VBox>
    </left>

    <!-- Contenu principal du blog -->
    <center>
        <ScrollPane style="-fx-background: #ffffff;">
            <VBox fx:id="postsContainer" spacing="15" style="-fx-padding: 20;">
                <Label text="Publications en attente"
                       style="-fx-font-size: 24px; -fx-text-fill: #1d2129; -fx-font-weight: bold;"/>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>