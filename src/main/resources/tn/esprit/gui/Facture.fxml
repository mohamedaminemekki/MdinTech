<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.FactureController"
            stylesheets="@style.css">

    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-pref-width: 200;">
            <Label text="Admin Dashboard" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button text="Nouvelle Facture" onAction="#handleAddDialog" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Separator style="-fx-border-color: #34495e;"/>
            <Button text="Actualiser" onAction="#refreshTable" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label text="Gestion des Factures" style="-fx-font-size: 24; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
            <TableView fx:id="factureTable" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"/>
        </VBox>
    </center>
</BorderPane>