<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.FactureController"
      spacing="10"
      style="-fx-padding: 20;">

    <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
        <Label text="Date Facture:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Prix:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="prixField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="État:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <CheckBox fx:id="stateCheckbox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Button text="Ajouter" onAction="#handleAdd" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button text="Supprimer" onAction="#handleDelete" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <TableView fx:id="factureTable" style="-fx-margin-top: 20;">
        <columns>
            <TableColumn text="ID" prefWidth="50">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Date" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="date"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Prix" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="prixFact"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Type" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="typeFacture"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="État" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="state"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
