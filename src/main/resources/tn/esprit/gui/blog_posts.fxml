<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.image.ImageView?>

<BorderPane stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.UserBlogController">

    <!-- Left Drawer -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Espace Client" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button mnemonicParsing="false" styleClass="icon-btn">
                <graphic>
                    <SVGPath content="M12 2L2 12h3v8h6v-6h2v6h6v-8h3L12 2z" style="-fx-fill: white;"/>
                </graphic>
                <text>Mes Factures</text>
            </Button>
            <Button mnemonicParsing="false" styleClass="icon-btn">
                <graphic>
                    <SVGPath content="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z" style="-fx-fill: white;"/>
                </graphic>
                <text>Historique</text>
            </Button>
            <Button mnemonicParsing="false" styleClass="icon-btn-active" onAction="#loadBlogPosts">
                <graphic>
                    <SVGPath content="M3 5v14h18V5H3zm4 2v2H5V7h2zm-2 6v-2h2v2H5zm0 2h2v2H5v-2zm14 2H9v-2h10v2zm0-4H9v-2h10v2zm0-4H9V7h10v2z" style="-fx-fill: white;"/>
                </graphic>
                <text>Blog Communautaire</text>
            </Button>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="20">
            <!-- Container pour ajouter une publication -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ImageView fx:id="userAvatar" fitWidth="40" fitHeight="40" />
                    <Label text="Créer un post" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                </HBox>
                <TextField fx:id="postTitle" promptText="Titre de votre post"
                           style="-fx-background-radius: 20; -fx-padding: 10;"/>
                <!-- Bouton pour générer le texte du post -->
                <Button fx:id="generatePostTextButton" text="Générer le texte du post" style="-fx-background-color: #e9ebee; -fx-text-fill: #050505; -fx-background-radius: 20;"/>

                <TextArea fx:id="postContent" promptText="Quoi de neuf ?"
                          style="-fx-background-radius: 15; -fx-padding: 10; -fx-wrap-text: true;"
                          prefRowCount="4"/>
                <ImageView fx:id="imagePreview" fitWidth="300" preserveRatio="true"
                           visible="false" managed="false"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Photo/Video" style="-fx-background-color: #e9ebee; -fx-text-fill: #050505; -fx-background-radius: 20;"
                            onAction="#handleAddImage"/>
                    <ComboBox fx:id="categoryCombo" promptText="Catégorie"
                              style="-fx-background-radius: 20;"/>
                    <Button text="Émotion/Activite" style="-fx-background-color: #e9ebee; -fx-text-fill: #050505; -fx-background-radius: 20;"/>
                </HBox>
                <Button text="Publier" styleClass="button-publish"
                        onAction="#handleNewPost"/>
            </VBox>

            <!-- Titre pour le flux de posts -->
            <Label text="Actualités récentes" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #050505;"/>

            <!-- Flux des posts -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox fx:id="feedContainer" spacing="20" style="-fx-alignment: center;"/>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
