<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<AnchorPane prefHeight="548.0" prefWidth="513.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.mdintech.Controller.SignInController">
    <Button layoutX="10" layoutY="10" onAction="#handleBackButton" text="← Back" />
    <VBox alignment="CENTER" layoutX="51.0" layoutY="120.0" prefHeight="309.0" prefWidth="411.0" spacing="10">
        <ImageView fx:id="profileImageView" fitWidth="132" fitHeight="132" preserveRatio="true" />
        <Button text="Choose Image" onAction="#handleChooseImage" />
        <TextField fx:id="cinField" promptText="CIN" />
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Label fx:id="passwordStrengthLabel" text="" style="-fx-text-fill: red;"/>
        <TextField fx:id="phoneField" promptText="Phone" />
        <TextField fx:id="addressField" promptText="Address" />
        <TextField fx:id="cityField" promptText="City" />
        <TextField fx:id="stateField" promptText="State" />
    </VBox>
     <Label layoutX="217.0" layoutY="36.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Sign In" />

     <Button fx:id="signInButton" layoutX="230.0" layoutY="465.0" onAction="#handleSignIn" text="Sign In" />
</AnchorPane>
