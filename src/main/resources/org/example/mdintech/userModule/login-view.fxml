<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="470.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mdintech.Controller.loginController">
   <children>
      <Label layoutX="140.0" layoutY="50.0" text="Welcome to MDINTECH !" style="-fx-font-size: 18; -fx-font-weight: bold;" />
      <VBox alignment="CENTER" layoutX="78.0" layoutY="100.0" spacing="10.0" prefHeight="200.0" prefWidth="334.0">
         <children>
            <TextField fx:id="emailField" promptText="Email" prefWidth="250.0" />
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250.0" />
         </children>
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
      </VBox>
      <Button fx:id="loginButton" layoutX="190.0" layoutY="250.0" mnemonicParsing="false" onAction="#login" text="Login" prefWidth="100.0" />
      <Hyperlink layoutX="170.0" layoutY="300.0" onAction="#gotoSignIn" text="Create account ?" />
      <Hyperlink layoutX="180.0" layoutY="330.0" onAction="#forgotPassword" text="Forgot Password?" />

   </children>
</AnchorPane>