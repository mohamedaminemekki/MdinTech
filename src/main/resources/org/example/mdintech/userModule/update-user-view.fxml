<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.mdintech.Controller.userController.updateuserController"
            prefWidth="400" prefHeight="500">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Update User Information" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane vgap="10" hgap="10">
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="State:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="stateField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="New Password (optional):" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        </GridPane>

        <Label fx:id="statusLabel" text="" style="-fx-text-fill: green;"/>

        <Button fx:id="updateButton" text="Update" onAction="#handleUpdate"/>
    </VBox>
</AnchorPane>
