<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController" spacing="20" alignment="CENTER">
    <!-- Titre de la page -->
    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Champ de texte pour l'identifiant -->
    <TextField fx:id="identifiantField" promptText="Identifiant" />

    <!-- Champ de mot de passe -->
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />

    <!-- Bouton pour se connecter -->
    <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" />
</VBox>
