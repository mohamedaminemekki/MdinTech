<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController" spacing="20" alignment="CENTER">
    <!-- Titre de la page -->
    <Label text="Connexion à l'application" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Champ de texte pour l'identifiant -->
    <Label text="Identifiant :" style="-fx-font-size: 14px;" />
    <TextField fx:id="identifiantField" promptText="Exemple : john.doe" prefWidth="300" /> <!-- Largeur augmentée -->

    <!-- Champ de mot de passe -->
    <Label text="Mot de passe :" style="-fx-font-size: 14px;" />
    <PasswordField fx:id="passwordField" promptText="Exemple : ********" prefWidth="300" /> <!-- Largeur augmentée -->

    <!-- Bouton pour se connecter -->
    <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" />
</VBox>